{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "name": "SpotiAds",
    "short_name": "SpotiAdBlocker",
    "description": "Removes audio ads on Spotifyâ„¢ Web Player",
    "version": "1.1.3",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://open.spotify.com/*"
    ],
    "icons": {
        "16": "icons/spotify-16.png",
        "48": "icons/spotify-48.png",
        "128": "icons/spotify-128.png"
    },
    "browser_action": {
        "default_icon": "icons/spotify-128.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "lib/sweetalert.min.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "injected/*",
        "lib/*"
    ]
}
